{INTNUM} { 
  yylval.iVal = int.Parse(yytext); 
  return (int)Tokens.INUM; 
}

{REALNUM} { 
  yylval.dVal = double.Parse(yytext); 
  return (int)Tokens.DNUM;
}

{BOOLVAL} {
	yylval.bVal = bool.Parse(yytext);
	return (int)Tokens.BVAL;
}

